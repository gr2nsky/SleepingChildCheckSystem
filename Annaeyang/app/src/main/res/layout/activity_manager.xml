<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Managers.Manager"
    android:orientation="vertical"
    android:background="@color/mainColor">

    <LinearLayout
        android:id="@+id/detachedLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/whitetedury">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/hard_gray_tedury"/>

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_margin="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/graywhitetedury">

                <TextView
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="탑승인원"
                    android:textSize="18dp"
                    android:textColor="#B3000000"
                    android:fontFamily="@font/yoon_gothic_340"
                    android:background="@drawable/graytedury"/>
                <ListView
                    android:layout_weight="1"
                    android:id="@+id/riding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="0px"
                    android:divider="#ffffff"
                    >
                </ListView>

            </LinearLayout>

            <View
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="0dp"/>

            <LinearLayout
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/graywhitetedury">

                <TextView
                    android:layout_weight="9"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="미탑승인원"
                    android:textSize="18dp"
                    android:textColor="#B3000000"
                    android:fontFamily="@font/yoon_gothic_340"
                    android:background="@drawable/graytedury"/>
                <ListView
                    android:layout_weight="1"
                    android:id="@+id/notRiding"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:dividerHeight="0px"
                    android:divider="#ffffff"></ListView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>